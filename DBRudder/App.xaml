<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="DBRudder.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converter="using:DBRudder.Converters"
    xmlns:local="using:DBRudder">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Themes/Styles.xaml"/>
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <Converter:TypeToStringConverter x:Key="TypeToStringConverter"/>
            <Converter:StringToInfoBarSeverityConverter x:Key="StringToInfoBarSeverityConverter"/>
            <Converter:BoolToIntConverter x:Key="BoolToIntConverter"/>
            <Converter:CoreResultToColorConverter x:Key="ResultToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
